<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Text text="Choose the Color"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Button text="Blue"
            GridPane.columnIndex="0" GridPane.rowIndex="1"
            onAction="#chooseBlueColor"/>

    <Button text="Green"
            GridPane.columnIndex="1" GridPane.rowIndex="1"
            onAction="#chooseGreenColor"/>

    <Button text="Yellow"
            GridPane.columnIndex="2" GridPane.rowIndex="1"
            onAction="#chooseYellowColor"/>

    <Button text="Red"
            GridPane.columnIndex="3" GridPane.rowIndex="1"
            onAction="#chooseRedColor"/>

    <Label
            fx:id="serverMessageLabel"
            GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Label
            fx:id="serverErrorLabel"
            GridPane.columnIndex="0" GridPane.rowIndex="4"/>
</GridPane>